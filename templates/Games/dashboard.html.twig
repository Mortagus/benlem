{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
  {#  <h3>My JavaScript Games</h3>#}
  {#  <p>Vous avez ici la liste des jeux que j'ai codé soit de moi-même soit en partant d'un contenu retrouvé sur le net.</p>#}
  <ul class="nav nav-tabs justify-content-center" id="game_tabs" role="tablist">
    {% for game in games %}
      <li class="nav-item">
        <a class="nav-link" id="{{ game }}-tab" data-toggle="tab" href="#{{ game }}_tab_content" role="tab"
           aria-controls="{{ game }}" aria-selected="{{ loop.first ? 'true' : 'false' }}">{{ game | capitalize }}</a>
      </li>
    {% endfor %}
  </ul>

  <div class="tab-content">
    {% for game in games %}
      <div class="tab-pane" id="{{ game }}_tab_content" role="tabpanel" aria-labelledby="{{ game }}-tab">
        {% include 'Games/' ~ game ~ '/game_board.panel.html.twig' ignore missing %}
      </div>
    {% endfor %}
  </div>
{% endblock %}
