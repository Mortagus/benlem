<div class="modal fade" id="tetris_modal" tabindex="-1" role="dialog" aria-labelledby="tetris_modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tetris_modalLabel">Tetris (in JS)</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="column col-6">
                            <canvas id="tetris_canvas" width="240" height="400"></canvas>
                        </div>
                        <div class="column col-6">
                            <div class="row">
                                <div class="col-12">
                                    <canvas id="next_tetroid_canvas" width="100" height="100"></canvas>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div id="score">
                                        <span id="score-label">Score: </span>
                                        <span id="score-value">0</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div id="line">
                                        <span id="line-label">Lines: </span>
                                        <span id="line-value">0</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <button type="button" class="btn btn-dark" id="game_button">Start a New Game</button>
                                </div>
                                <div class="col-12">
                                    <span id="game_message"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>